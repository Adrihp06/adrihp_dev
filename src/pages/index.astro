---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCV } from '../utils/cvLoader';

const cv = await getCV();
---

<BaseLayout title="Adrihp Dev | Personal Website" description="Welcome to my personal website">
  <main>
    <section class="hero">
      <h1>Adrihp Dev</h1>
      <p class="tagline">Building with purpose and clarity.</p>
    </section>

    <hr />

    <section class="now">
      <h2>The Now</h2>
      <p>
        Currently focusing on building robust, type-safe web applications and exploring the intersection of AI and software engineering.
      </p>
    </section>

    <hr />

    <section class="trajectory">
      <h2>Trajectory</h2>
      <div class="cv-list">
        {cv.map((item) => (
          <div class="cv-item">
            <h3>{item.role}</h3>
            <p class="company">{item.company}</p>
            <p class="date">{item.date}</p>
            <p class="description">{item.description}</p>
          </div>
        ))}
      </div>
    </section>

    <hr />

    <section class="principles">
      <h2>Principles</h2>
      <ul class="principles-list">
        <li>
          <h3>Content First</h3>
          <p>Every design decision serves the content, not the other way around.</p>
        </li>
        <li>
          <h3>Type Safety</h3>
          <p>Strong typing catches errors early and makes code maintainable.</p>
        </li>
        <li>
          <h3>Performance</h3>
          <p>Fast loading, minimal JavaScript, optimized for all devices.</p>
        </li>
      </ul>
    </section>

    <hr />

    <section class="contact">
      <h2>Connect</h2>
      <p>
        This is a minimalist portfolio and personal website. More content coming soon.
      </p>
    </section>
  </main>
</BaseLayout>

<style>
  main {
    min-height: 100vh;
  }

  .hero {
    padding-top: var(--space-xl);
    padding-bottom: var(--space-lg);
  }

  .tagline {
    font-size: 1.5rem;
    color: var(--color-text-muted);
    font-family: var(--font-serif);
    font-style: italic;
  }

  /* CV List Styles */
  .cv-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .cv-item {
    padding-left: var(--space-md);
    border-left: 2px solid var(--color-border);
    position: relative;
  }

  .cv-item::before {
    content: '';
    position: absolute;
    left: -6px; /* 2px width / 2 + 5px radius = 6px offset? No.
                   Border is 2px. To center dot on border:
                   Dot size 10px. Left should be - (10/2) - (2/2) + border_offset?
                   Let's align it nicely.
                */
    top: 0.5em;
    width: 10px;
    height: 10px;
    background: var(--color-bg);
    border: 2px solid var(--color-accent);
    border-radius: 50%;
  }

  .cv-item h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-xs);
    font-family: var(--font-serif);
  }

  .cv-item .company {
    font-weight: 600;
    margin-bottom: 0;
  }

  .cv-item .date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .principles-list {
    list-style: none;
    padding: 0;
    display: grid;
    gap: var(--space-md);
  }

  .principles-list li {
    padding: var(--space-md);
    border-left: 3px solid var(--color-accent);
  }

  .principles-list h3 {
    margin-bottom: var(--space-xs);
    font-size: 1.5rem;
  }

  .principles-list p {
    margin: 0;
    color: var(--color-text-muted);
  }

  @media (min-width: 768px) {
    .principles-list {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }
</style>
