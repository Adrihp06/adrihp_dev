---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadCV, getExperienceSorted, getEducationSorted, formatDateRange } from '../utils/cv';

const cv = loadCV();
const experience = getExperienceSorted();
const education = getEducationSorted();
---

<BaseLayout title="Adrián Hernández Padrón" description="Data Scientist & AI Engineer — Building end-to-end AI systems from concept to production.">
  <main class="flex-1">
    <!-- Hero -->
    <section class="max-w-content mx-auto px-6 pt-16 pb-10">
      <div class="inline-block px-3 py-1 mb-4 text-xs font-medium tracking-wide uppercase rounded-full bg-accent/10 text-accent border border-accent/20">
        Available for Opportunities
      </div>
      <h1 class="mb-4">{cv.name}</h1>
      <p class="text-xl text-ink-muted font-serif italic mb-6">
        Data Scientist & AI Engineer
      </p>
      <p class="text-lg text-ink-muted max-w-[600px] mb-8">
        {cv.summary}
      </p>
      <div class="flex gap-4 items-center">
        <a href={`https://github.com/${cv.github}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-ink bg-white/50 border border-border rounded-lg hover:bg-white hover:border-accent/30 transition-all no-underline">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          GitHub
        </a>
        <a href={`https://linkedin.com/in/${cv.linkedin}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-ink bg-white/50 border border-border rounded-lg hover:bg-white hover:border-accent/30 transition-all no-underline">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
        <a href={`mailto:${cv.email}`} class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-paper bg-accent border border-accent rounded-lg hover:bg-accent/90 transition-all no-underline">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Get in Touch
        </a>
      </div>
    </section>

    <hr class="border-border mx-auto max-w-content" />

    <!-- The Now -->
    <section class="max-w-content mx-auto px-6 py-12">
      <h2 class="mb-6">The Now</h2>
      <p class="text-lg text-ink-muted leading-relaxed">
        Currently working as a Data Scientist at <strong class="text-ink">DISA Holding Energético</strong>,
        building scalable ML production pipelines and exploring the intersection of GenAI agents and
        operations research. Finishing a Master's in Astronomy and Astrophysics, because the universe
        deserves the same rigor as a production model.
      </p>
      <div class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div class="p-4 border-l-4 border-accent bg-gradient-to-r from-accent/5 to-transparent rounded-r-lg">
          <h3 class="text-base font-sans font-semibold mb-2 text-ink flex items-center gap-2">
            <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Focus
          </h3>
          <p class="text-sm text-ink-muted m-0">GenAI Agents, MLOps, LLM Applications</p>
        </div>
        <div class="p-4 border-l-4 border-accent bg-gradient-to-r from-accent/5 to-transparent rounded-r-lg">
          <h3 class="text-base font-sans font-semibold mb-2 text-ink flex items-center gap-2">
            <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Location
          </h3>
          <p class="text-sm text-ink-muted m-0">{cv.location}</p>
        </div>
        <div class="p-4 border-l-4 border-accent bg-gradient-to-r from-accent/5 to-transparent rounded-r-lg">
          <h3 class="text-base font-sans font-semibold mb-2 text-ink flex items-center gap-2">
            <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Learning
          </h3>
          <p class="text-sm text-ink-muted m-0">Astrophysics, LangGraph, Deep Agents</p>
        </div>
      </div>
    </section>

    <hr class="border-border mx-auto max-w-content" />

    <!-- Trajectory / Experience -->
    <section class="max-w-content mx-auto px-6 py-12">
      <h2 class="mb-8">Trajectory</h2>
      <div class="space-y-10">
        {experience.map((job) => (
          <div class="relative pl-6 border-l-2 border-border hover:border-accent transition-colors group">
            <div class="absolute left-[-5px] top-1 w-2.5 h-2.5 rounded-full bg-accent group-hover:scale-150 transition-transform" />
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-3">
              <div>
                <h3 class="text-lg mb-0 group-hover:text-accent transition-colors">{job.role}</h3>
                <p class="text-sm text-accent m-0 font-medium">{job.company}</p>
              </div>
              <time class="text-sm text-ink-muted whitespace-nowrap">
                {formatDateRange(job.start, job.end)}
              </time>
            </div>
            <ul class="list-none p-0 m-0 space-y-2">
              {job.highlights.map((h) => (
                <li class="text-sm text-ink-muted pl-4 relative before:content-['→'] before:absolute before:left-0 before:text-accent">{h}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <hr class="border-border mx-auto max-w-content" />

    <!-- Education -->
    <section class="max-w-content mx-auto px-6 py-12">
      <h2 class="mb-8">Education</h2>
      <div class="space-y-6">
        {education.map((edu) => (
          <div class="flex flex-col sm:flex-row sm:justify-between gap-1">
            <div>
              <h3 class="text-base mb-0">{edu.degree}</h3>
              <p class="text-sm text-ink-muted m-0">{edu.institution}</p>
            </div>
            <time class="text-sm text-ink-muted whitespace-nowrap">
              {formatDateRange(edu.start, edu.end)}
            </time>
          </div>
        ))}
      </div>
    </section>

    <hr class="border-border mx-auto max-w-content" />

    <!-- Skills -->
    <section class="max-w-content mx-auto px-6 py-12">
      <h2 class="mb-8">Skills</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="p-6 bg-gradient-to-br from-white/60 to-white/30 rounded-xl border border-border hover:border-accent/30 transition-all hover:shadow-lg">
          <div class="flex items-center gap-2 mb-3">
            <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            <h3 class="text-base font-sans font-semibold mb-0 text-ink">AI Engineering & GenAI</h3>
          </div>
          <p class="text-sm text-ink-muted m-0 leading-relaxed">{cv.skills.ai_engineering}</p>
        </div>
        <div class="p-6 bg-gradient-to-br from-white/60 to-white/30 rounded-xl border border-border hover:border-accent/30 transition-all hover:shadow-lg">
          <div class="flex items-center gap-2 mb-3">
            <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h3 class="text-base font-sans font-semibold mb-0 text-ink">MLOps & Production</h3>
          </div>
          <p class="text-sm text-ink-muted m-0 leading-relaxed">{cv.skills.mlops}</p>
        </div>
        <div class="p-6 bg-gradient-to-br from-white/60 to-white/30 rounded-xl border border-border hover:border-accent/30 transition-all hover:shadow-lg">
          <div class="flex items-center gap-2 mb-3">
            <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <h3 class="text-base font-sans font-semibold mb-0 text-ink">Data Science</h3>
          </div>
          <p class="text-sm text-ink-muted m-0 leading-relaxed">{cv.skills.data_science}</p>
        </div>
      </div>
    </section>

    <hr class="border-border mx-auto max-w-content" />

    <!-- Certifications -->
    <section class="max-w-content mx-auto px-6 py-12">
      <h2 class="mb-6">Certifications</h2>
      <ul class="list-none p-0 m-0 space-y-3">
        {cv.certifications.map((cert) => (
          <li class="flex items-baseline gap-3">
            <span class="text-sm text-accent font-medium">{cert.year}</span>
            <span class="text-sm text-ink">{cert.name}</span>
            <span class="text-xs text-ink-muted">— {cert.issuer}</span>
          </li>
        ))}
      </ul>
    </section>

    <hr class="border-border mx-auto max-w-content" />

    <!-- Languages -->
    <section class="max-w-content mx-auto px-6 py-12 pb-16">
      <h2 class="mb-6">Languages</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {cv.languages.map((lang) => (
          <div class="flex items-center justify-between p-4 bg-white/40 rounded-lg border border-border">
            <span class="text-sm font-medium text-ink">{lang.language}</span>
            <span class="text-sm text-ink-muted">{lang.level}</span>
          </div>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>
