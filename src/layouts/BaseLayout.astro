---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Adrián Hernández Padrón',
  description = 'Data Scientist & AI Engineer — Personal portfolio and blog'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,400;0,9..144,600;1,9..144,300;1,9..144,400&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-paper text-ink font-sans min-h-screen flex flex-col leading-relaxed">
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  /* Anthropic-esque Design System — Tailwind handles most, these are extras */

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Fraunces', 'Playfair Display', Georgia, serif;
    font-weight: 400;
    line-height: 1.2;
  }

  h1 {
    font-size: clamp(2.25rem, 5vw, 3rem);
    letter-spacing: -0.02em;
  }

  h2 {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    letter-spacing: -0.01em;
  }

  h3 {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
  }

  /* Ensure Tailwind typography plugin picks up Fraunces */
  .prose h1, .prose h2, .prose h3, .prose h4 {
    font-family: 'Fraunces', 'Playfair Display', Georgia, serif;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Selection color */
  ::selection {
    background-color: #D97757;
    color: white;
  }
</style>
